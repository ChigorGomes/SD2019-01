<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background2">

    <Button
        android:id="@+id/buttonEditarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttom"
        android:text=" Editar"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerRegiaoEditar"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_above="@+id/buttonEditarUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="47dp"
        android:textAlignment="center"
        android:layout_marginBottom="41dp"
        android:background="@drawable/rounded_input_text"
        android:entries="@array/regiao" />

    <EditText
        android:id="@+id/editTextIdadeEditar"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_above="@+id/spinnerRegiaoEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rounded_input_text"
        android:editable="false"
        android:ems="10"
        android:gravity="center"
        android:hint="Idade"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSenhaLoginEditar"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_above="@+id/editTextIdadeEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rounded_input_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextEmailLoginEditar"
        android:layout_width="308dp"
        android:layout_height="51dp"
        android:layout_above="@+id/editTextSenhaLoginEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/rounded_input_text"
        android:editable="false"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNomeEditar"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_above="@+id/editTextEmailLoginEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rounded_input_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="153dp"
        android:layout_height="132dp"
        android:layout_above="@+id/editTextNomeEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background_logo"
        app:srcCompat="@drawable/ic_action_pearson" />

</RelativeLayout>