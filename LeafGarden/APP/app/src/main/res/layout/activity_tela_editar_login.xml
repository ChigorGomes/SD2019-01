    <!--        android:inputType="textPassword"-->
    <!--        android:textColor="@color/primary_text"-->
    <!--        android:textColorHint="@color/primary_light"-->
    <!--        android:textStyle="bold" />-->

    <EditText
        android:id="@+id/editTextEmailLoginEditar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/editTextIdadeEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/primary_light"
        android:editable="true"
        android:ems="10"
        android:enabled="false"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/secondary_text"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNomeEditar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/editTextEmailLoginEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/primary_light"
        android:ems="10"
        android:focusable="true"
        android:gravity="center"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/secondary_text"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="136dp"
        android:layout_above="@+id/editTextNomeEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/ic_003_boy" />

    <Spinner
        android:id="@+id/spinnerRegiaoEditar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/buttonEditarUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:entries="@array/regiao"
        android:gravity="center"
        android:textAlignment="center" />

</RelativeLayout>