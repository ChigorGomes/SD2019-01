<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background2">

    <ListView
        android:id="@+id/listViewDica"
        android:layout_width="395dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="9dp" />

    <TextView
        android:id="@+id/textViewDicas"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_above="@+id/listViewDica"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_input_text"
        android:gravity="center"
        android:text="@string/dica"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorLuminosidade"
        android:layout_width="99dp"
        android:layout_height="51dp"
        android:layout_alignBottom="@+id/textViewDicas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/rounded_input_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorUmidadeSolo"
        android:layout_width="147dp"
        android:layout_height="47dp"
        android:layout_above="@+id/textViewSensorUmidadeAmbiente"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="13dp"
        android:layout_toStartOf="@+id/textViewSensorTempSolo"
        android:layout_toEndOf="@+id/imageViewSensorLuminosidade"
        android:background="@drawable/rounded_input_text"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorUmidadeAmbiente"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_above="@+id/textViewDicas"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="60dp"
        android:layout_toStartOf="@+id/textViewSensorTempAmbiente"
        android:layout_toEndOf="@+id/textViewSensorLuminosidade"
        android:background="@drawable/rounded_input_text"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorTempSolo"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_above="@+id/textViewSensorTempAmbiente"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/rounded_input_text"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorTempAmbiente"
        android:layout_width="118dp"
        android:layout_height="45dp"
        android:layout_above="@+id/textViewDicas"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="62dp"
        android:background="@drawable/rounded_input_text"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewSensorLuminosidade"
        android:layout_width="105dp"
        android:layout_height="107dp"
        android:layout_above="@+id/textViewSensorLuminosidade"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/background_logo"
        app:srcCompat="@drawable/light" />

    <ImageView
        android:id="@+id/imageViewSensorUmidade"
        android:layout_width="105dp"
        android:layout_height="104dp"
        android:layout_above="@+id/textViewSensorUmidadeSolo"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="59dp"
        android:layout_toEndOf="@+id/imageViewSensorLuminosidade"
        android:background="@drawable/background_logo"
        app:srcCompat="@drawable/gota" />

    <ImageView
        android:id="@+id/imageViewSensorTemperatura"
        android:layout_width="111dp"
        android:layout_height="105dp"
        android:layout_above="@+id/textViewSensorTempSolo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="63dp"
        android:layout_toEndOf="@+id/imageViewSensorUmidade"
        android:background="@drawable/background_logo"
        app:srcCompat="@drawable/temperatura" />

    <ImageView
        android:id="@+id/imageViewSensorImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageViewSensorLuminosidade"
        android:layout_alignParentStart="true"
        android:layout_marginStart="126dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_logo"
        app:srcCompat="@drawable/buttonshape" />

    <TextView
        android:id="@+id/textViewNomePlantaSensor"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/imageViewSensorTemperatura"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="248dp"
        android:layout_toEndOf="@+id/imageViewSensorImg"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>