<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background2">

    <ListView
        android:id="@+id/listViewDica"
        android:layout_width="378dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="569dp" />

    <TextView
        android:id="@+id/textViewDicas"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_above="@+id/listViewDica"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="@string/dica"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="506dp" />

    <TextView
        android:id="@+id/textViewSensorLuminosidade"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_above="@+id/textViewDicas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="93dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorUmidadeSolo"
        android:layout_width="125dp"
        android:layout_height="42dp"
        android:layout_above="@+id/textViewSensorUmidadeAmbiente"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="24dp"
        android:layout_toStartOf="@+id/textViewSensorTempSolo"
        android:layout_toEndOf="@+id/imageViewSensorLuminosidade"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorUmidadeAmbiente"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:layout_above="@+id/textViewDicas"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/textViewSensorTempAmbiente"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSensorTempSolo"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:layout_above="@+id/textViewSensorTempAmbiente"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/textViewSensorTempAmbiente"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_above="@+id/textViewDicas"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="345dp" />

    <ImageView
        android:id="@+id/imageViewSensorLuminosidade"
        android:layout_width="96dp"
        android:layout_height="112dp"
        android:layout_above="@+id/textViewSensorLuminosidade"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/hexagono"
        app:srcCompat="@drawable/light"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="165dp" />

    <ImageView
        android:id="@+id/imageViewSensorUmidade"
        android:layout_width="95dp"
        android:layout_height="111dp"
        android:layout_above="@+id/textViewSensorUmidadeSolo"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/imageViewSensorTemperatura"
        android:layout_toEndOf="@+id/imageViewSensorLuminosidade"
        android:background="@drawable/hexagono"
        app:srcCompat="@drawable/gota"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="177dp" />

    <ImageView
        android:id="@+id/imageViewSensorTemperatura"
        android:layout_width="91dp"
        android:layout_height="109dp"
        android:layout_above="@+id/textViewSensorTempSolo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/hexagono"
        app:srcCompat="@drawable/temperatura"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="167dp" />

    <ImageView
        android:id="@+id/imageViewSensorImg"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/imageViewSensorLuminosidade"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background_imagem"
        app:srcCompat="@drawable/buttonshape"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textViewNomePlantaSensor"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_above="@+id/imageViewSensorUmidade"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="345dp" />

</RelativeLayout>