<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background2"
    tools:context=".Activity.TelaCadastroLogin">

    <Button
        android:id="@+id/buttonEditarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_buttom"
        android:text="Salvar"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerRegiaoEditar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/buttonEditarUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_border"
        android:entries="@array/regiao"
        android:gravity="center"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/editTextIdadeEditar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/spinnerRegiaoEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Idade"
        android:inputType="number"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextSenhaLoginEditar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/editTextIdadeEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editTextEmailLoginEditar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/editTextSenhaLoginEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNomeEditar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/editTextEmailLoginEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_border"
        android:ems="10"
        android:gravity="center"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="195dp"
        android:layout_height="205dp"
        android:layout_above="@+id/editTextNomeEditar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_buttom"
        app:srcCompat="@drawable/ic_action_pearson" />

</RelativeLayout>