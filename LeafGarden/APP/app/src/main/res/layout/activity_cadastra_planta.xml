<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_background2"
    tools:context=".TelaCadastroLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewTituloTelaCadastrarPlanta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="86dp"
                android:layout_marginBottom="249dp"
                android:text=" Cadastrar Planta"
                android:textColor="@color/cardview_light_background"
                android:textSize="35dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/Relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_alignTop="@+id/textViewTituloTelaCadastrarPlanta"
                android:layout_alignParentStart="true"
                android:layout_marginTop="55dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewPlanta"
                    android:layout_width="120dp"
                    android:layout_height="59dp"
                    android:layout_above="@+id/buttonImagemPlanta"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="72dp"
                    android:background="@drawable/conta2"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/buttonImagemPlanta"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="-67dp"
                    android:layout_marginEnd="243dp"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/rounded_buttom"
                    android:text="@string/adcFoto"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextNomePlanta"
                    android:layout_width="199dp"
                    android:layout_height="59dp"
                    android:layout_above="@+id/editTextSensorUmidadeAmbiente"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_border"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/nomePlant"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/editTextSensorUmidadeAmbiente"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewPlanta" />

                <EditText
                    android:id="@+id/editTextSensorUmidadeAmbiente"
                    android:layout_width="198dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="180dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="64dp"
                    android:background="@drawable/rounded_border"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/umidadeAmbiente"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/buttonImagemPlanta"
                    app:layout_constraintTop_toBottomOf="@+id/editTextNomePlanta" />


            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="291dp"
            android:layout_below="@+id/Relativelayout1"
            android:layout_marginTop="0dp">

            <EditText
                android:id="@+id/editTextLocAdequado"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/rounded_border"
                android:ems="10"
                android:gravity="center"
                android:hint="Local Adeaquado"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editTextLuminosidade"
                android:layout_width="136dp"
                android:layout_height="60dp"
                android:layout_below="@+id/editTextLocAdequado"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/rounded_border"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/lumi"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextLocAdequado" />


            <EditText
                android:id="@+id/editTextSensorUmidadeSolo"
                android:layout_width="125dp"
                android:layout_height="58dp"
                android:layout_below="@+id/editTextLocAdequado"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/rounded_border"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/umidadeSolo"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/editTextLuminosidade"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextLocAdequado" />

            <EditText
                android:id="@+id/editTextSensorTempSolo"
                android:layout_width="136dp"
                android:layout_height="61dp"
                android:layout_below="@+id/editTextLuminosidade"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/rounded_border"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/tempSolo"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextSensorUmidadeSolo" />

            <EditText
                android:id="@+id/editTextSensorTempAmbiente"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/editTextSensorUmidadeSolo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="209dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/rounded_border"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/tempAmbiente"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextLuminosidade" />


        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_below="@id/Relativelayout2"
                android:layout_marginTop="3dp">

                <EditText
                    android:id="@+id/editTextDescricaoPlanta"
                    android:layout_width="366dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/buttonCadastrarPlanta"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="18dp"
                    android:autofillHints=""
                    android:background="@drawable/rounded_border"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Descricao"
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/buttonCadastrarPlanta"
                    android:layout_width="234dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="88dp"
                    android:layout_marginEnd="88dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/rounded_buttom"
                    android:text="@string/cadastrarPlanta"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextDescricaoPlanta" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>