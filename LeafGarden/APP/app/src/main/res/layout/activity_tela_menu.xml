<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background2"
    tools:context=".TelaMenu">


    <TextView
        android:layout_width="355dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="206dp"
        android:background="@drawable/rounded_border"
        android:gravity="center"
        android:text="Bem Vindo!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35dp" />

    <Button
        android:id="@+id/buttonConta"
        android:layout_width="168dp"
        android:layout_height="161dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttom"
        android:drawableBottom="@drawable/conta1" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonPlantas"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_border"
        android:text="@string/conta"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonMeuJardim"
        android:layout_width="166dp"
        android:layout_height="159dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttom"
        android:drawableTop="@drawable/jardim1" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonHistorico"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_border"
        android:text="@string/jardim"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonHistorico"
        android:layout_width="156dp"
        android:layout_height="155dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttom"
        android:drawableBottom="@drawable/historico1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_border"
        android:text="@string/config"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonPlantas"
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttom"
        android:drawableTop="@drawable/planta1" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_border"
        android:text="@string/plantas"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />




</RelativeLayout>